<?xml version="1.0" encoding="UTF-8"?>

<!-- add by freeeyes -->
<configer ProcName="DBTest" DB="mysql">
  	<TableClass database="db_test"class="CUserGrid" SerialType="json" desc="">
		<!-- 格子内的对象ID，如果没有则是0 -->
		<Column name="GridID" classtype="int" value="0" />
		<!-- 格子中的物品类型，如果没有则是0 -->
		<Column name="GridType" classtype="int" value="0" />
		<!-- 格子中的物品描述，如果没有默认值是空 -->
		<Column name="GridDesc" classtype="char" length="50" value="'\0'" />
		<!-- 格子中的物品个数，如果没有默认值是0 -->
		<Column name="GridCount" classtype="int" value="" />
	</TableClass>  
  
 	<TableClass database="db_test" class="CUserGridList" SerialType="json" desc="">
		<!-- GridID 一般与之匹配的是UserID 默认是0-->
		<Column name="GridID" classtype="int" value="" />
		<!-- 一个List对象，最多有20个格子 -->
		<Column name="CUserGrid" classtype="CUserGrid" length="20" />
	</TableClass> 
  
	<TableClass database="db_test" table="tb_UserData" class="CUserData" classpool="500" key="ID" func="select;insert;update;delete;" desc="">
		<Column name="ID" dbtype="int" classtype="int" value="0" />
		<Column name="Nick" dbtype="varchar" classtype="char" length="20" value="'\0'" />
		<Column name="Job" dbtype="int" classtype="int" value="0" />
		<Column name="Ablity" dbtype="int" classtype="int" value="0" />
		<!-- 最后更新时间，这个字段由update的时候，自动记录。-->
		<Column name="Activetime" dbtype="date" classtype="int" value="0" />
		<!-- 用户身上物品格子。用于测试类之间的包含，这部分存储为json到数据库 -->
		<Column name="CUserGridList" dbtype="json" classtype="CUserGridList" />
	</TableClass>
</configer>